<div class="comment">
    <div class="commentContainer">
        {{#if c_image.c_filepath}}
        <img class="pfp" name="profilePicture" src="/{{c_image.c_filepath}}">
        {{else}}
        <img class="pfp" name="profilePicture" src="https://upload.wikimedia.org/wikipedia/commons/a/af/Default_avatar_profile.jpg">
        {{/if}}
    </div>
    <div class="commentTextContainer">
        <h4 name="username">{{c_u_OID.u_username}}</h4>
        <span name="date">{{c_date}}</span>
        {{#if c_has_been_edited}}
        <span>Edited</span><br>
        {{/if}}
        <p name="commentText">{{c_body}}</p>
        <div class="buttonsContainer editCommentButtons">
            <button id="attachFilesComment">Attach Files</button>
            <button id="postComment" onclick="editCommentDiv(this); window.alert('To Be Done')">Edit Comment</button>
        </div>
            <div class="commentActionsContainer">
            <i class="fa-solid fa-thumbs-up" id="like_{{c_id}}"></i>
            <span name="numLikes"> {{c_numLikes}}</span>
            <i class="fa-solid fa-thumbs-down" id="dislike_{{c_id}}"></i>                                                                         
            <span name="numDislikes"> {{c_numDislikes}}</span>
            {{#if isLoggedIn}}
                <button class="replyButton" onclick="toggleReplyComment(this)">Reply</button>
                {{#if c_isAuthor}}
                    <button onclick="editCommentDiv(this)">Edit</button>
                    <button class="deleteCommentButton" onclick="window.alert('To Be Done')">Delete</button>
                {{/if}}
            {{/if}}

            <form name="create-comment" action="/api/comment/createComment" method="post">
            <div class="createComment replyComment">
                <input id="draftComment" name="commentText" type="text" contenteditable="true" placeholder="Enter your comment here" oninput="if(this.innerHTML.trim()==='<br>')this.innerHTML=''"></input>
                <div class="buttonsContainer">
                    <button id="attachFilesComment" onclick="window.alert('To Be Done')">Attach Files</button>
                    <button id="postComment">Reply</button>
                </div>
            </div>
            <input type="hidden" name="comment_uid" value="668ccd48463f3ef61ee1b659"> <!-- this is hardcoded for now sir said since ala pa sessions -->
            <input type="hidden" name="post_id" value="{{c_post_id}}"> <!-- this is hardcoded for now sir said since ala pa sessions -->
            <input type="hidden" name="parentComment" value="{{_id}}"> <!-- this is hardcoded for now sir said since ala pa sessions -->
            </form>
        </div>
        {{#if isLoggedIn}}
            {{#each replies}}
                {{> comment this isLoggedIn=true}}
            {{/each}}
        {{else}}
            {{#each replies}}
                {{> comment this}}
            {{/each}}
        {{/if}}
    </div>
</div>