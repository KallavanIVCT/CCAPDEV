<div class="comment">
    <div class="commentContainer">
        <img class="pfp" name="profilePicture" src="/{{commentdetails.c_image.c_filepath}}">
    </div>
    <!--https://upload.wikimedia.org/wikipedia/commons/a/af/Default_avatar_profile.jpg-->
    <div class="commentTextContainer">
        <h4 name="username">{{commentdetails.c_username}}</h4>
        <span name="date">{{commentdetails.c_date}}</span>
        {{#if commentdetails.c_has_been_edited}}
        <span>Edited</span><br>
        {{/if}}
        <p name="commentText">{{commentdetails.c_body}}</p>
        <div class="buttonsContainer editCommentButtons">
            <button id="attachFilesComment">Attach Files</button>
            <button id="postComment" onclick="editCommentDiv(this)">Edit Comment</button>
        </div>
            <div class="commentActionsContainer">
            <i class="fa-solid fa-thumbs-up"></i>
            <span name="numLikes"> 123</span>           <!--Implement Later-->
            <i class="fa-solid fa-thumbs-down"></i>
            <span name="numDislikes"> 123</span>
            <button class="replyButton" onclick="toggleReplyComment(this)">Reply</button>
            <button onclick="editCommentDiv(this)">Edit</button>
            <button class="deleteCommentButton">Delete</button>
        </div>

        {{#if commentReply}}
            {{#each commentReply}}
            {{> comment this}}
            {{/each}}
        {{/if}}
    </div>
</div>